    ViewData["Title"] = "Our People ";
}
<div class="container marketing">
    <div class="row">
        <div class="px-4 py-5  text-center">
            <h1 class="display-5 strong">
                Our People
            </h1>
            <div class="col-lg-10 mx-auto">
            </div>
        </div>

    </div>

