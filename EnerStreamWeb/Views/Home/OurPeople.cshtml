<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <input type="checkbox"
                       id="card1"
                       class="more"
                       aria-hidden="true" />
                <div class="content">
                    <div class="front cardbg01">
                        <div class="inner">
                            <h2>Our People</h2>
                            <label for="card1" class="button" aria-hidden="true">
                                LEARN MORE
                            </label>
                        </div>
                    </div>
                    <div class="back">
